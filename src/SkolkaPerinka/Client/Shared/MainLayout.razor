@*@using Microsoft.AspNetCore.Authorization*@
@inherits LayoutComponentBase
@*@attribute [Authorize]*@

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Info">
        <MudText Typo="Typo.h5" Class="ml-3">Peřinka</MudText>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                @context.User.Identity.Name
                <MudButton OnClick="SignOut">Sign out</MudButton>
            </Authorized>
        </AuthorizeView>
        <LanguageSwitcher />
        <ThemeSwitcher />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudSpacer />
    <MudMainContent>
            @Body
    </MudMainContent>
</MudLayout>

<MudDialogProvider/>
<MudSnackbarProvider/>