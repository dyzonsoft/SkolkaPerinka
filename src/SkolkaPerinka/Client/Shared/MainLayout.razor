@inherits LayoutComponentBase


<MudLayout>
    <MudAppBar Elevation="0" Color="Color.Info">
        <MudIconButton Icon="@Icons.Filled.School" Color="Color.Secondary" Size="Size.Large"></MudIconButton>
        <MudText Typo="Typo.h5" Class="ml-3">Peřinka</MudText>
        <MudSpacer />
        <MudMenu Icon="@Icons.Filled.Person" IconColor="Color.Default" Size="Size.Large">
            <AuthorizeView>
            <Authorized>
                <MudText Class="border-b-2 mb-3 pa-3">@context.User.Identity.Name</MudText>
                <MudMenuItem>
                    <MudText>@language["ONas"]</MudText>
                </MudMenuItem>
                <MudMenuItem>
                    <MudText>@language["Pravidla"]</MudText>
                </MudMenuItem>
                <MudMenuItem OnClick="SignOut">
                    <MudText><MudIcon Icon="@Icons.Filled.Logout"></MudIcon>@language["Odhlasit"]</MudText>
                </MudMenuItem>
            </Authorized>
        </AuthorizeView>
        </MudMenu>
        <LanguageSwitcher />
        <ThemeSwitcher />
    </MudAppBar>
    <MudSpacer />
    <MudMainContent>
            @Body
    </MudMainContent>
</MudLayout>

<MudDialogProvider/>
<MudSnackbarProvider/>