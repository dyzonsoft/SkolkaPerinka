@inherits LayoutComponentBase


<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Info">
        <MudText Typo="Typo.h5" Class="ml-3">Peřinka</MudText>
        <MudSpacer />
        <MudMenu Icon="@Icons.Filled.Person" IconColor="Color.Default" Size="Size.Large">
            <AuthorizeView>
            <Authorized>
                <MudText Class="border-b-2 mb-3 pa-3">@context.User.Identity.Name</MudText>
                <MudMenuItem>
                    <MudText>O nás</MudText>
                </MudMenuItem>
                <MudMenuItem>
                    <MudText>Pravidla</MudText>
                </MudMenuItem>
                <MudMenuItem>
                    <MudButton OnClick="SignOut" FullWidth="true">Sign out</MudButton>
                </MudMenuItem>
            </Authorized>
        </AuthorizeView>
        </MudMenu>
        <LanguageSwitcher />
        <ThemeSwitcher />
    </MudAppBar>
    <MudSpacer />
    <MudMainContent>
            @Body
    </MudMainContent>
</MudLayout>

<MudDialogProvider/>
<MudSnackbarProvider/>