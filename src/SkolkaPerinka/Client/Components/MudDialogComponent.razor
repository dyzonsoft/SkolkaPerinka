@inject ISnackbar snackbar
@inject ILanguageContainerService language

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-3 mb-n1"/>
            @language["Delete"]
        </MudText>
    </TitleContent>
    <DialogContent>
        @if (_delete == "children")
        {
            <MudStack Row="true">
                <MudText>Opravdu chcete smazat </MudText>
                <MudText Typo="Typo.caption" Color="Color.Info">@_childrenName</MudText>
            </MudStack>
            <MudStack Row="true">
                <MudText>rodiče </MudText>
                <MudText Typo="Typo.caption" Color="Color.Info">@_userName ?</MudText>
            </MudStack>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="DeleteServer">Delete Server</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string _childrenName { get; set; }
    [Parameter] public string _userName { get; set; }
    [Parameter] public string _delete { get; set; }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteServer()
    {
        MudDialog.Close(DialogResult.Ok(_userName));
    }
}