@inject ILanguageContainerService language

@*<MudFab StartIcon="@Icons.Filled.Bookmark" Label="Bookmark" />*@
<MudPaper Elevation="0" Width="100%" Class="text-end">
    <MudFab StartIcon="@Icons.Filled.PersonAdd" Color="Color.Default" Class="align-button-right" Label="@language["RegistrovatDite"]" @onclick="CreateChildren"></MudFab>
</MudPaper>
<MudPaper Width="90%">
    <MudList Clickable="true">
        <MudListSubheader>
            @language["VaseDeti"] :
        </MudListSubheader>
        @if (childrens != null)
        {
            foreach (var children in childrens)
            {
                MudBlazor.Color genderColor = Color.Info;
                if (children.Gender == "Girl") genderColor = Color.Secondary;
                <MudListItem IconColor="@genderColor" IconSize="Size.Large" Icon="@Icons.Filled.ChildCare">
                    <MudText>@children.FirstName   @children.LastName</MudText>
                </MudListItem>
            }
        }
    </MudList>
</MudPaper>


