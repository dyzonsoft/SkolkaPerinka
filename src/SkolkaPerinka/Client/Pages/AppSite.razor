@page "/appsite"
@inject ILanguageContainerService language
@inject NavigationManager navigationManager

<MudContainer MaxWidth="MaxWidth.Large">
    <MudGrid Class="mt-5">
        <MudItem xs="12" lg="5">
            <MudPaper Width="100%" Height="100%">
                <MudStack Row="true">
                    <AuthorizeView Roles="Director">
                        <MudPaper Elevation="0" Width="100%" Class="text-start">
                            <MudFab StartIcon="@Icons.Filled.Dashboard" Color="Color.Info" Class="ma-4" Label="@language["Administration"]" @onclick="Administration"></MudFab>
                        </MudPaper>
                    </AuthorizeView>
                    <MudPaper Elevation="0" Width="100%" Class="text-end">
                        <MudFab StartIcon="@Icons.Filled.PersonAdd" Color="Color.Default" Class="ma-4" Label="@language["RegistrovatDite"]" @onclick="CreateChildren"></MudFab>
                    </MudPaper>
                </MudStack>
                <Childrens _selectedDate="@DateTime.Today.ToString()" _withCheckBox="false" _withDelete="true" _parentEmail="@parentEmail" 
                                                                        OnDeleteChildrenToParentComponent="ChildrenWasDeleted" />
            </MudPaper>
        </MudItem>
        <MudItem xs="12" lg="7">
            <MudPaper Width="100%" Height="100%" Class="pa-4 calendar">
                <Calendar @ref="calendar"/>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>