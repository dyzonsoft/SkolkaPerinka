
@page "/signin"
@using Blazored.LocalStorage
@using SkolkaPerinka.Client.Providers
@inject NavigationManager navigationManager
@inject ILanguageContainerService language

<PageTitle>Sign in</PageTitle>
<MudContainer MaxWidth="MaxWidth.Medium" Class="pa-4">
    <MudText Typo="Typo.h4">@language["Prihlaseni"]</MudText>
    <EditForm Model="_userToSignIn" OnValidSubmit="signInUser">
            <DataAnnotationsValidator/>
            <MudGrid>
                <MudItem xs="12" sm="7">
                    <MudCard>
                        <MudCardContent>
                            <MudTextField Label="@language["Email"]" Class="mt-3"
                                          @bind-Value="_userToSignIn.Email" For="@(() => _userToSignIn.Email)"/>
                            <MudTextField Label="@language["Heslo"]" HelperText="Choose a strong password" Class="mt-3"
                                          @bind-Value="_userToSignIn.Password" For="@(() => _userToSignIn.Password)" InputType="InputType.Password"/>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">@language["Prihlasit"]</MudButton>
                            or
                            <MudNavLink Href="register">register</MudNavLink>
                        </MudCardActions>
                    </MudCard>
                </MudItem>
                <MudItem xs="12" sm="5">
                    <MudPaper Class="pa-4 mud-height-full">
                        <MudText Typo="Typo.subtitle2">@language["ChybyOvereni"] :</MudText>
                        @if (success)
                        {
                            <MudText Color="Color.Success">@language["Prihlasen"]</MudText>
                        }
                        else
                        {
                            <MudText Color="@Color.Error">
                                <ValidationSummary />
                            </MudText>
                        }
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </EditForm>
</MudContainer>

