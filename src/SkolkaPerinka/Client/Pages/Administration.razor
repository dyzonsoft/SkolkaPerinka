@page "/administration"
@inject ILanguageContainerService language
@inject NavigationManager navigationManager
@inject IDialogService DialogService
@inject ISnackbar snackbar
@inject IJSRuntime _jsRuntime

<PageTitle>Administration</PageTitle>
<MudContainer  Class="mud-appbar mud-theme-info header" MaxWidth="MaxWidth.ExtraExtraLarge">
    <MudStack Row="true">
        <MudIconButton Class="back" Size="Size.Large" Icon="@Icons.Filled.KeyboardBackspace" aria-label="@language["Back"]" @onclick="@GoBack"></MudIconButton>
        <MudText Typo="Typo.h4" Class="pt-4 m-auto" Color="Color.Default">@language["Administration"]</MudText>
    </MudStack>
    <MudPaper Elevation="0" Class="oblouk"></MudPaper>
</MudContainer>
<MudContainer MaxWidth="MaxWidth.Large">
    <MudPaper Class="mt-5 pa-3">
        @*<MudGrid>*@
            @*<MudItem xs="12" lg="9">*@
                <MudPaper Width="100%" Height="100%">
                    <MudGrid>
                        <MudItem xs="12" sm="6" md="3">
                            <MudCard Elevation="2" Class="rounded-lg">
                                <MudCardHeader>
                                    <CardHeaderContent>
                                        <MudText Typo="Typo.h5" Align="Align.Center">@language["Teachers"]</MudText>
                                    </CardHeaderContent>
                                </MudCardHeader>
                                <MudCardContent>
                                    <MudList Class="mx-auto mt-4 list-max-height" Clickable="true">
                                        @if (_teachers == null)
                                        {
                                            <MudProgressCircular Indeterminate="true"></MudProgressCircular>          
                                        }
                                        else
                                        {
                                            foreach (var teacher in _teachers)
                                            {
                                                <UserConponent user="@teacher" OnDeleteUser="DeleteUser" OnChangeAsyncUser="ChangeAccessUser"/>
                                            }
                                        }
                                    </MudList>
                                </MudCardContent>
                                <MudCardActions Class="d-flex justify-center">
                                    @*<MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Style="width:50%;">Start Now</MudButton>*@
                                </MudCardActions>
                            </MudCard>
                        </MudItem>
                        <MudItem xs="12" sm="6" md="3">
                            <MudCard Elevation="25" Class="rounded-lg">
                                <MudCardHeader>
                                    <CardHeaderContent>
                                        <MudText Typo="Typo.h5" Align="Align.Center">@language["Parents"]</MudText>
                                    </CardHeaderContent>
                                </MudCardHeader>
                                <MudCardContent>
                                    <MudList Class="mx-auto mt-4 list-max-height" Clickable="true">
                                        @if (_parents == null)
                                        {
                                            <MudProgressCircular Indeterminate="true"></MudProgressCircular>         
                                        }
                                        else
                                        {
                                            foreach (var parent in _parents)
                                            {
                                                <UserConponent user="@parent" OnDeleteUser="DeleteUser" OnChangeAsyncUser="ChangeAccessUser"/>
                                            }
                                        }
                                    </MudList>
                                </MudCardContent>
                                <MudCardActions Class="d-flex justify-center">
                                    @*<MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Style="width:50%;">Start Now</MudButton>*@
                                </MudCardActions>
                            </MudCard>
                        </MudItem>
                        <MudItem xs="12" sm="6" md="3">
                            <MudCard Elevation="25" Class="rounded-lg">
                                <MudCardHeader>
                                    <CardHeaderContent>
                                        <MudText Typo="Typo.h5" Align="Align.Center">@language["Childrens"]</MudText>
                                    </CardHeaderContent>
                                </MudCardHeader>
                                <MudCardContent Class="pl-0 pr-0 list-max-height">
                                    <MudList Class="mx-auto mt-4" Style="width:300px;" Clickable="true">
                                        @if (_childrens == null)
                                        {
                                            <MudProgressCircular Indeterminate="true"></MudProgressCircular>       
                                        }
                                        else
                                        {
                                            foreach (var children in _childrens)
                                            {
                                                MudBlazor.Color genderColor = Color.Info;
                                                if (children.Gender == "Girl") genderColor = Color.Secondary;
                                                <ChildrenComponent children="@children" genderColor="@genderColor" OnDeleteChildern="DeleteChildren" />
                                            }
                                        }
                                    </MudList>
                                </MudCardContent>
                                <MudCardActions Class="d-flex justify-center">
                                    @*<MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Style="width:50%;">Start Now</MudButton>*@
                                </MudCardActions>
                            </MudCard>
                        </MudItem>
                        <MudItem xs="12" sm="6" md="3">
                            <MudPaper Width="100%" Height="100%" Class="pa-4">
                                <MudButton StartIcon="@Icons.Filled.AttachEmail" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large">
                                    <MudText Typo="Typo.h6">@language["PoslatZpravu"]</MudText>
                                </MudButton>
                                <br />
                                <MudButton StartIcon="@Icons.Filled.AssignmentInd" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large">
                                    <MudText Typo="Typo.h6">@language["PridatUcitele"]</MudText>
                                </MudButton>
                                <MudButton StartIcon="@Icons.Filled.Key" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large">
                                    <MudText Typo="Typo.h6">@language["PridatUcitele"]</MudText>
                                </MudButton>
                                <MudButton StartIcon="@Icons.Filled.FamilyRestroom" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Large">
                                    <MudText Typo="Typo.h6">@language["PridatRodice"]</MudText>
                                </MudButton>
                            </MudPaper>
                        </MudItem>
                    </MudGrid>
                </MudPaper>
            @*</MudItem>*@
            <MudItem xs="12" lg="3">
                
            </MudItem>
        @*</MudGrid>*@
        </MudPaper>
</MudContainer>


